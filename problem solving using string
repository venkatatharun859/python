# reverse the string

PROGRAM 1:
s="hello"
res=""
for i in range(len(s)):
    res=s[i]+res
print(res)

PROGRAM 2:

s="tharun"
res=""
for  i in range(-1,-7,-1):
    res=res+s[i]
print(res)

#string is palindrome

s="madam"
def palindrome(s):
    i=0
    j=len(s)-1
    while i<j:
        if s[i]!=s[j]:
            return "not a palindrome"
        i+=1
        j-=1
    return "palindrome"
print(palindrome(s))



# count vowels and consonants

s="studying"
vowel_count=0
consonant_count=0
for char in s:
    if char in "aeiou":
        vowel_count+=1
    else:
        consonant_count+=1
print("vowels:",vowel_count)
print("consonants:", consonant_count)


#check if two strings are anagrams

PROGRAM1:

s="eat"
r="ate"
def anagram(s,r):
    if len(s)!=len(r):
        return "not angram"
    for char in s:
        if char not in r:
            return "not anagram"
    return "anagram"
print(anagram(s,r))


PROGRAM2:

s="aab"
r="abb"
if sorted(s)==sorted(r):
    print("anagram")
else:    
    print("not anagram")


PROGRAM3:

s="baaaaaa"
r="aaaaaab"
res={}
