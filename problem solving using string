    if len(res)!=len(res1):
        
        return False
    for char in res:
        if char not in s:
            if res[char]!=res1.get(char,0):
                return False
    return True
print(check_anagram(res,res1))  


 #remove duplicate characters
 
s="dileep"
res=""
for char in s:
    if char not in res:
        res=res+char
print(res) 


#find the first non-repeating character
  
PROGRAM1:
  
s="swiss"
for char in s:
    if s.count(char)==1:
        print(char)
        break


PROGRAM2:

s="aaaab"
def helper(s):
    for char in s: 
        if s.count(char)==1: 
            return "character"
        return "no character" 
print(helper(s))


#convert string to uppercase/lowercase
    
 PROGRAM1:
    
s="tharun"
res=""
for char in s:
    res+=chr(ord(char)-32)
print(res)


 PROGRAM2:

s="THARUN"
res=""
for char in s:
    res+=chr(ord(char)+32)
print(res)











